{
  "name": "websocket-example",
  "version": "1.0.0",
  "description": "WebSockets in TypeScript",
  "author": "Simon Karman",
  "license": "ISC",
  "scripts": {
    "build": "tsc",
    "dev": "nodemon src/server.ts",
    "test": "jest --silent --verbose test/**.test.ts",
    "lint": "eslint . --ext .ts",
    "lint:fix": "npm run lint -- --fix",
    "precommit": "npm run lint && npm test"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "express": "^4.17.2",
    "express-basic-auth": "^1.2.1",
    "jsonwebtoken": "^8.5.1",
    "mongodb": "^4.3.1",
    "uuid": "^8.3.2",
    "uuid-validate": "^0.0.3",
    "ws": "^8.4.2"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.0.1",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/uuid": "^8.3.4",
    "@types/uuid-validate": "^0.0.1",
    "@types/ws": "^8.2.2",
    "@typescript-eslint/eslint-plugin": "^4.31.2",
    "@typescript-eslint/parser": "^4.31.2",
    "eslint": "^7.32.0",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-jest": "^24.4.2",
    "husky": "4.3.8",
    "jest": "^27.2.1",
    "lint-staged": "^11.1.2",
    "nodemon": "^2.0.15",
    "ts-jest": "^27.0.5",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.5"
  },
  "lint-staged": {
    "**/*.ts": [
      "npm run lint:fix"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npx lint-staged && npm run precommit"
    }
  }
}
